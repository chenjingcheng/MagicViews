<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MagicFont">
        <attr name="typeFace" format="string"/>
        <attr name="characterSpacing" format="float"/>
    </declare-styleable>

    <declare-styleable name="MagicTabLayout">
        <attr name="childrenTypeFace" format="string"/>
        <attr name="childrenCharacterSpacing" format="float"/>
    </declare-styleable>

    <declare-styleable name="MagicToolbar">
        <attr name="titleTypeFace" format="string"/>
        <attr name="titleCharacterSpacing" format="float"/>
        <attr name="subtitleTypeFace" format="string"/>
        <attr name="subtitleCharacterSpacing" format="float"/>
    </declare-styleable>

    <declare-styleable name="MagicPreference">
        <attr name="prefTypeface" format="string"/>
    </declare-styleable>

    <declare-styleable name="MagicSwitchPreference">
        <attr name="switchPrefTypeface" format="string"/>
    </declare-styleable>

    <declare-styleable name="MagicCheckBoxPreference">
        <attr name="checkBoxTypeface" format="string"/>
    </declare-styleable>

    <declare-styleable name="MagicPreferenceGroup">
        <attr name="preferenceGroupTypeface" format="string"/>
    </declare-styleable>

    <declare-styleable name="MagicEditTextPreference">
        <attr name="editTextTypeface" format="string"/>
    </declare-styleable>

</resources>